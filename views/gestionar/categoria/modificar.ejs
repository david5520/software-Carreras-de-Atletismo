<div id="editarCatModal" class="modal fade" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" >
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Modificar Categoria</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>


            <form class="text-center" action="/index/gestionar/categoria/modificar" id="editCat">

                <div class="modal-body"> 

                    <div class="form-group row align-items-center">
                        <label for="nombreCategoria" class="col-md-4 col-form-label">Nombre de Categoría:</label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="nombre" id="editNombreCat" placeholder="Nombre de Categoría"  required>
                        </div>
                    </div>

                    <div class="form-group row align-items-center">
                        <label for="descripcionCategoria" class="col-md-4 col-form-label">Descripción de Categoría:</label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="descripcion" id="editDescripcionCat" placeholder="Descripción de Categoría" required>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <div class="row">
                                <label for="inputEdadMin" class="col-md-6 col-form-label">Edad Minima:</label>
                                <div class="col-md-6">
                                    <input type="number" class="form-control" name="edad_min" id="editEdadMinCat" required>
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <div class="row">
                                <label for="inputEdadMax"  class="col-md-6 col-form-label">Edad Maxima:</label>
                                <div class="col-md-6">
                                    <input type="number" class="form-control" name="edad_max" id="editEdadMaxCat" required>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">CERRAR</button>
                    <button type="submit" class="btn btn-primary">EDITAR</button>

                </div>
            </form>

        </div>

    </div>

</div>