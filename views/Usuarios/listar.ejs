<% include ../partials/head %>

<div class="title text-center">
	<h1>COMPETIDORES</h1>
</div>



<% include crear %>
<% include modificar %>

<div class="container">

	<div class="table-title">
		<div class="row">
			<div class="col-sm-8"><h1><b>Listado De Atletas</b></h1></div>
			<div class="col-12 col-md-4">
				<button href="#addEmployeeModal" data-toggle="modal" type="button" class="btn btn-success btn-lg"><i class="fa fa-plus"></i> Agregar Nuevo</button> 
			</div>
		</div>
	</div>

	<div class="table-responsive  text-center" > 

		<table class="table table-striped table-bordered table-fixed display" id="myTableUser" cellspacing="0" >

			<thead>
				<tr>
					<th scope="col">ID</th>
					<th scope="col">Usuario</th>
					<th scope="col">Nombre </th>
					<th scope="col">Apellido</th>
					<th>Accion</th>

				</tr>
			</thead>
			<tbody>

				<% for(var i=0; i<dataUsuarios.length; i++) {%>
				<tr>

					<td class="idUsuario"><%= dataUsuarios[i]['id'] %></td>
					<td ><%= dataUsuarios[i]['nombre_usuario'] %></td>
					<td><%= dataUsuarios[i]['nombre'] %></td>
					<td><%= dataUsuarios[i]['apellido'] %></td>

					<td class="d-flex align-items-center justify-content-center">
						<form action="/Usuarios/modificar" class="modiUser" > 
							<input type="hidden" id="User_id" name="usuario_id" value="<%= dataUsuarios[i]['id']%>">
							<input type="submit" class="btn btn-primary" href="#Usuariomodificar" data-toggle="modal" id="editarU" value="Editar" >  
						</form>  
						<form  method="post" action="/Usuarios/eliminar/<%= dataUsuarios[i]['id'] %>" class="eliminarUser" > 
							<button type="submit" class="btn btn-danger" name="delete"  onClick="return confirm('Â¿Quieres eliminar el Atleta?')">Eliminar</button>
						</form>
					</td>
				</tr>
				<% } %>

			</tbody>
		</table>
	</div>


</div>
<% include ../partials/foot %>