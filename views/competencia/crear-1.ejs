<% include ../partials/head %>


<div class="section-center d-flex align-items-center justify-content-center flex-column content-carreras">

	<div class="title text-center">
		<h1>COMPETENCIA - CREAR</h1>
	</div>

	<div class="container">

		<div class="form-wrapper">
			<div class="form form--step1">
				<form class="text-center" action="/competencia/crear" method="post">

					<div class="form-row">
						<div class="form-group col-md-6">
							<div class="row">
								<label for="inputNombreCompetencia" class="col-md-2 col-form-label">Nombre:</label>
								<div class="col-md-10">
									<input type="text" class="form-control" name="nombre" required>
								</div>
							</div>
						</div>
						<div class="form-group col-md-6">
							<div class="row">
								<label for="inputLugar"  class="col-md-2 col-form-label">Lugar:</label>
								<div class="col-md-10">
									<input type="text" class="form-control" name="lugar" required>
								</div>
							</div>
						</div>
					</div>

					<div class="form-row">
						<div class="form-group col-md-6">
							<div class="row">
								<label for="inputFecha" class="col-md-2 col-form-label">Fecha:</label>
								<div class="col-md-10">
									<input type="date" class="form-control" name="fecha" required>
								</div>
							</div>
						</div>
						<div class="form-group col-md-6">
							<div class="row">
								<label for="inputHora"  class="col-md-2 col-form-label">Hora:</label>
								<div class="col-md-10">
									<input type="time" class="form-control" name="hora" required>
								</div>
							</div>
						</div>
					</div>

					<button type="submit" class="btn btn-secondary btn-lg btn-next ">Siguiente</button>

				</form>
			</div>

		</div>

	</div>

</div>


<% include ../partials/foot %>