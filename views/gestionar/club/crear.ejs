<div id="crearClubModal" class="modal fade" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Crear Club</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <form class="text-center" action="/index/gestionar/club/crear" id="crearClub">

                <div class="modal-body">

                    <div class="form-group row align-items-center">
                        <label for="nombreClub" class="col-md-4 col-form-label">Nombre del Club:</label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="nombre" placeholder="Nombre del Club" required>
                        </div>
                    </div>

                    <div class="form-group row align-items-center">
                        <label for="descripcionClub" class="col-md-4 col-form-label">Descripción del Club:</label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="descripcion" placeholder="Descripción del Club" required>
                        </div>
                    </div>

                </div>


                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">CERRAR</button>
                    <button type="submit" class="btn btn-success">CREAR</button>
                </div>

            </form>

        </div>
    </div>
</div>